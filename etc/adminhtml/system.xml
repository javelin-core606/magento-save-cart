<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="checkout">
            <group id="mdn_save_cart" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Save Cart</label>
                <field id="enable_save_cart" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1"  canRestore="1">
                    <label>Enable Save Cart</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Select "YES" or "NO" for Enable or Disable the save cart option</comment>
                </field>
            </group>
        </section>
    </system>
</config>
